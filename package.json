{
  "scripts": {
    "build": "rimraf built && tsc",
    "watch": "tsc --watch",
    "lint": "tslint -p ./tsconfig.json",
    "test": "jest",
    "prettier": "prettier --config ./.prettierrc --write \"{src,test,bin,lib,config}/**/*.{ts,json,css,html,md}\""
  },
  "devDependencies": {
    "@now/node": "^0.12.6",
    "@types/jest": "^24.0.17",
    "@types/node": "^12.7.2",
    "@types/puppeteer-core": "^1.9.0",
    "@types/uuid": "^3.4.5",
    "husky": "^3.0.3",
    "jest": "^24.9.0",
    "lint-staged": "^9.2.1",
    "prettier": "1.18.2",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "chrome-aws-lambda": "^1.19.0",
    "puppeteer-core": "^1.19.0",
    "uuid": "^3.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "roots": [
      "<rootDir>/lib/",
      "<rootDir>/src/"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/**/*.ts"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ],
    "*.{json,md,html,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "name": "screenie",
  "description": "",
  "version": "1.0.0",
  "main": "index.js",
  "keywords": [],
  "author": "",
  "license": "ISC"
}
